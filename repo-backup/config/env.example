# ========================================
# GARIMPEIRO GEEK - Configurações
# ========================================
# Copie este arquivo para .env na raiz e configure suas credenciais

# ========================================
# TELEGRAM
# ========================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=your_channel_id_here
TELEGRAM_ADMIN_USER_ID=your_admin_user_id_here

# ========================================
# BANCO DE DADOS
# ========================================
DATABASE_URL=sqlite:///src/db/garimpeiro_geek.db
DATABASE_PATH=src/db/garimpeiro_geek.db

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FILE=src/logs/garimpeiro_geek.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ========================================
# SCRAPING
# ========================================
SCRAPING_TIMEOUT=30
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_DELAY=1.0
SCRAPING_MAX_CONCURRENT=5

# ========================================
# AFILIADOS
# ========================================
# Amazon
AFFILIATE_AMAZON_TAG=garimpeirogee-20

# Magazine Luiza
AFFILIATE_MAGALU_TAG=magazinegarimpeirogeek

# Awin (já configurado no código)
AFFILIATE_AWIN_PUBLISHER_ID=

# ========================================
# RAKUTEN ADVERTISING
# ========================================
# Habilitar/desabilitar integração Rakuten
RAKUTEN_ENABLED=false

# Tokens de autenticação (obrigatórios se RAKUTEN_ENABLED=true)
RAKUTEN_WEBSERVICE_TOKEN=b64c55b9b35ee0e881a8f7bafeb77a374b11e62e439ec63cd4470dbbefef4409
RAKUTEN_SECURITY_TOKEN=65d854a458c9a1e4be4e7c93e0631c704fe842c37022a82d398d4390ca2f596d

# SID opcional (se aplicável por loja/programa)
RAKUTEN_SID=

# ========================================
# NOTIFICAÇÕES
# ========================================
NOTIFICATIONS_ENABLED=true
NOTIFICATION_INTERVAL=3600

# ========================================
# DESENVOLVIMENTO
# ========================================
DEBUG=false
TESTING=false

# ========================================
# CACHE
# ========================================
CACHE_ENABLED=true
CACHE_TTL=300

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ========================================
# MONITORAMENTO
# ========================================
MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=300

# ========================================
# BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
