def start_dashboard_windows():
    """Inicia o dashboard com configuraÃ§Ãµes especÃ­ficas para Windows"""
    print("ğŸš€ Iniciando Dashboard Garimpeiro Geek...")
    print("ğŸ”§ ConfiguraÃ§Ãµes especÃ­ficas para Windows")

    try:
        from app import app

        # ConfiguraÃ§Ãµes especÃ­ficas para Windows
        app.config["ENV"] = "production"
        app.config["DEBUG"] = False
        app.config["TESTING"] = False

        print("âœ… App configurado")
        print("ğŸŒ Iniciando servidor...")
        print("ğŸ’¡ Se nÃ£o funcionar, tente executar como administrador")

        # Tenta porta 8080 primeiro (menos restritiva)
        try:
            print("ğŸ”„ Tentando porta 8080...")
            app.run(
                host="127.0.0.1",
                port=8080,
                debug=False,
                use_reloader=False,
                threaded=True,
            )
        except Exception as e:
            print(f"âš ï¸ Porta 8080 falhou: {e}")
            print("ğŸ”„ Tentando porta 3000...")

            try:
                app.run(
                    host="127.0.0.1",
                    port=3000,
                    debug=False,
                    use_reloader=False,
                    threaded=True,
                )
            except Exception as e2:
                print(f"âš ï¸ Porta 3000 falhou: {e2}")
                print("ğŸ”„ Tentando porta 5000 com configuraÃ§Ãµes especiais...")

                # Ãšltima tentativa com configuraÃ§Ãµes especiais
                app.run(
                    host="localhost",
                    port=5000,
                    debug=False,
                    use_reloader=False,
                    threaded=True,
                )

    except Exception as e:
        print(f"âŒ Erro ao iniciar dashboard: {e}")
        print("\nğŸ’¡ SOLUÃ‡Ã•ES PARA WINDOWS:")
        print("   1. Execute como administrador")
        print("   2. Desative temporariamente o Windows Defender")
        print("   3. Verifique configuraÃ§Ãµes de firewall")
        print("   4. Use uma porta diferente")
        return False


def create_admin_script():
    """Cria script para executar como administrador"""
    print("ğŸ“‹ Criando script para administrador...")

    script_content = """@echo off
chcp 65001 >nul
title Dashboard Garimpeiro Geek - Administrador

echo.
echo ============================================================
echo ğŸš€ INICIADOR DO DASHBOARD GARIMPEIRO GEEK
echo ============================================================
echo.

:: Verifica se Ã© administrador
net session >nul 2>&1
if %errorLevel% == 0 (
    echo âœ… Executando como administrador
) else (
    echo âš ï¸ NÃ£o Ã© administrador
    echo ğŸ”§ Tentando elevar privilÃ©gios...
    powershell -Command "Start-Process cmd -ArgumentList '/c cd /d \"%~dp0\" && \"%~f0\"' -Verb RunAs"
    exit /b
)

:: Ativa ambiente virtual
if not defined VIRTUAL_ENV (
    echo ğŸ”§ Ativando ambiente virtual...
    call "..\\venv\\Scripts\\activate.bat"
)

:: Inicia o dashboard
echo ğŸš€ Iniciando dashboard...
cd /d "%~dp0"
python start_windows_final.py

pause
"""

    script_path = Path(__file__).parent / "start_as_admin.bat"
    with open(script_path, "w", encoding="utf-8") as f:
        f.write(script_content)

    return script_path


