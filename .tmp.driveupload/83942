#!/usr/bin/env python3
"""
Scraper da Amazon usando API - Alternativa ao Web Scraping
Mais confiÃ¡vel e nÃ£o Ã© bloqueado pela Amazon
"""

import time
import logging
import requests
from typing import List, Dict, Optional
from urllib.parse import urljoin
import random

# ConfiguraÃ§Ã£o de logging
logging.basicConfig(level=logging.INFO)
logger = logging.getLogger(__name__)


class AmazonAPIScraper:
    """Scraper da Amazon usando API e mÃ©todos alternativos"""

    def __init__(self):
        self.base_url = "https://www.amazon.com.br"
        self.session = requests.Session()

        # Headers para parecer navegador real
        self.headers = {
            "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
            "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8",
            "Accept-Language": "pt-BR,pt;q=0.9,en;q=0.8",
            "Accept-Encoding": "gzip, deflate, br",
            "DNT": "1",
            "Connection": "keep-alive",
            "Upgrade-Insecure-Requests": "1",
            "Sec-Fetch-Dest": "document",
            "Sec-Fetch-Mode": "navigate",
            "Sec-Fetch-Site": "none",
            "Cache-Control": "max-age=0",
        }

        # URLs alternativas para ofertas
        self.ofertas_urls = [
            "https://www.amazon.com.br/deals",
            "https://www.amazon.com.br/s?i=specialty-aps&bbn=16209062011&rh=n%3A16209062011%2Cn%3A13805413011",
            "https://www.amazon.com.br/s?i=specialty-aps&bbn=16209062011&rh=n%3A16209062011%2Cn%3A13805413011&s=price-desc-rank",
            "https://www.amazon.com.br/s?i=specialty-aps&bbn=16209062011&rh=n%3A16209062011%2Cn%3A13805413011&s=discount-rank",
        ]

        # Categorias populares para buscar ofertas
        self.categorias = [
            "smartphones",
            "notebooks",
            "fones de ouvido",
            "smart tv",
            "consoles de videogame",
            "cÃ¢meras digitais",
            "tablets",
            "smartwatches",
        ]

    def get_random_delay(self):
        """Retorna um delay aleatÃ³rio para parecer humano"""
        return random.uniform(1, 3)

    def search_products_by_category(
        self, categoria: str, max_pages: int = 2
    ) -> List[Dict]:
        """Busca produtos por categoria com filtros de oferta"""
        ofertas = []

        try:
            logger.info(f"ğŸ” Buscando ofertas na categoria: {categoria}")

            for page in range(1, max_pages + 1):
                # ConstrÃ³i URL de busca com filtros
                search_url = f"{self.base_url}/s"
                params = {
                    "k": categoria,
                    "i": "specialty-aps",
                    "bbn": "16209062011",
                    "rh": "n%3A16209062011%2Cn%3A13805413011",
                    "s": "price-desc-rank",  # Ordena por preÃ§o (menor primeiro)
                    "page": page,
                }

                try:
                    logger.info(f"ğŸ“„ Acessando pÃ¡gina {page}: {categoria}")

                    response = self.session.get(
                        search_url, params=params, headers=self.headers, timeout=30
                    )

                    if response.status_code == 200:
                        # Extrai produtos da pÃ¡gina
                        page_ofertas = self.extract_products_from_html(
                            response.text, categoria
                        )
                        ofertas.extend(page_ofertas)

                        logger.info(
                            f"âœ… PÃ¡gina {page}: {len(page_ofertas)} produtos encontrados"
                        )

                        # Delay entre pÃ¡ginas
                        time.sleep(self.get_random_delay())
                    else:
                        logger.warning(
                            f"âš ï¸ PÃ¡gina {page}: Status {response.status_code}"
                        )

                except Exception as e:
                    logger.error(f"âŒ Erro na pÃ¡gina {page}: {e}")
                    continue

                # Limita o nÃºmero de produtos por categoria
                if len(ofertas) >= 20:
                    logger.info(f"ğŸ›‘ Limite de 20 produtos atingido para {categoria}")
                    break

            logger.info(f"ğŸ¯ Total de ofertas para {categoria}: {len(ofertas)}")

        except Exception as e:
            logger.error(f"âŒ Erro ao buscar categoria {categoria}: {e}")

        return ofertas

    def extract_products_from_html(
        self, html_content: str, categoria: str
    ) -> List[Dict]:
        """Extrai produtos do HTML da pÃ¡gina de busca"""
        ofertas = []

        try:
            from bs4 import BeautifulSoup

            soup = BeautifulSoup(html_content, "html.parser")

            # Procura por produtos na pÃ¡gina
            product_containers = soup.find_all(
                "div", {"data-component-type": "s-search-result"}
            )

            if not product_containers:
                # Fallback: procura por outros seletores
                product_containers = soup.find_all(
                    "div", class_=lambda x: x and "s-result-item" in x
                )

            logger.info(
                f"ğŸ” Encontrados {len(product_containers)} containers de produto"
            )

            for container in product_containers:
                try:
                    produto = self.extract_single_product(container, categoria)
                    if produto:
                        ofertas.append(produto)
                except Exception as e:
                    logger.debug(f"âš ï¸ Erro ao extrair produto: {e}")
                    continue

        except Exception as e:
            logger.error(f"âŒ Erro ao extrair produtos do HTML: {e}")

        return ofertas

    def extract_single_product(self, container, categoria: str) -> Optional[Dict]:
        """Extrai informaÃ§Ãµes de um produto individual"""
        try:
            # TÃ­tulo do produto
            titulo = None
            title_elem = container.find("h2", class_="a-size-mini")
            if title_elem:
                titulo = title_elem.get_text(strip=True)

            if not titulo:
                # Fallback para outros seletores de tÃ­tulo
                title_selectors = ["h2", "h3", '[class*="title"]', '[class*="name"]']
                for selector in title_selectors:
                    title_elem = container.find(selector)
                    if title_elem and title_elem.get_text(strip=True):
                        titulo = title_elem.get_text(strip=True)
                        break

            # PreÃ§o do produto
            preco = None
            price_elem = container.find("span", class_="a-price-whole")
            if price_elem:
                preco = price_elem.get_text(strip=True)

            if not preco:
                # Fallback para outros seletores de preÃ§o
                price_selectors = [
                    '[class*="price"]',
                    ".price",
                    '[data-a-color="price"]',
                ]
                for selector in price_selectors:
                    price_elem = container.find(selector)
                    if price_elem and price_elem.get_text(strip=True):
                        preco = price_elem.get_text(strip=True)
                        break

            # Limpa e valida o preÃ§o extraÃ­do
            if preco:
                # Remove caracteres nÃ£o numÃ©ricos exceto vÃ­rgula e ponto
                import re

                preco_limpo = re.sub(r"[^\d,.]", "", preco)
                # Remove pontos finais e mÃºltiplos pontos
                preco_limpo = preco_limpo.rstrip(".")
                # Substitui vÃ­rgulas por pontos para conversÃ£o
                preco_limpo = preco_limpo.replace(",", ".")
                # Verifica se Ã© um nÃºmero vÃ¡lido
                try:
                    float(preco_limpo)
                    preco = preco_limpo
                except ValueError:
                    preco = None

            # Link do produto
            link = None
            link_elem = container.find("a", href=True)
            if link_elem:
                href = link_elem["href"]
                if "/dp/" in href or "/gp/product/" in href:
                    if not href.startswith("http"):
                        link = urljoin(self.base_url, href)
                    else:
                        link = href

            # Imagem do produto
            imagem = None
            img_elem = container.find("img")
            if img_elem:
                imagem = img_elem.get("src") or img_elem.get("data-src")

            # Desconto
            desconto = None
            discount_elem = container.find("span", class_="a-badge-text")
            if discount_elem:
                discount_text = discount_elem.get_text(strip=True)
                import re

                discount_match = re.search(r"(\d+)%?", discount_text)
                if discount_match:
                    desconto = int(discount_match.group(1))

            # ValidaÃ§Ã£o: produto deve ter tÃ­tulo e preÃ§o
            if titulo and preco:
                return {
                    "titulo": titulo,
                    "preco": preco,
                    "link": link,
                    "imagem": imagem,
                    "desconto": desconto,
                    "loja": "Amazon Brasil",
                    "categoria": categoria,
                    "timestamp": time.time(),
                }

            return None

        except Exception as e:
            logger.debug(f"âŒ Erro ao extrair produto individual: {e}")
            return None

    def buscar_ofertas_gerais(self) -> List[Dict]:
        """Busca ofertas gerais de todas as categorias"""
        todas_ofertas = []

        logger.info("ğŸš€ INICIANDO BUSCA DE OFERTAS NA AMAZON")
        logger.info("=" * 60)

        for categoria in self.categorias:
            try:
                logger.info(f"\nğŸ” Buscando: {categoria.upper()}")
                ofertas_categoria = self.search_products_by_category(categoria)
                todas_ofertas.extend(ofertas_categoria)

                # Delay entre categorias
                time.sleep(self.get_random_delay())

            except Exception as e:
                logger.error(f"âŒ Erro na categoria {categoria}: {e}")
                continue

        # Remove duplicatas baseado no tÃ­tulo
        ofertas_unicas = []
        titulos_vistos = set()

        for oferta in todas_ofertas:
            if oferta["titulo"] not in titulos_vistos:
                ofertas_unicas.append(oferta)
                titulos_vistos.add(oferta["titulo"])

        logger.info(f"\nğŸ¯ TOTAL DE OFERTAS ÃšNICAS: {len(ofertas_unicas)}")

        return ofertas_unicas

    def test_connection(self) -> bool:
        """Testa a conexÃ£o com a Amazon"""
        try:
            logger.info("ğŸ” Testando conexÃ£o com a Amazon...")

            response = self.session.get(self.base_url, headers=self.headers, timeout=10)

            if response.status_code == 200:
                logger.info("âœ… ConexÃ£o com a Amazon funcionando")
                return True
            else:
                logger.warning(f"âš ï¸ Status da conexÃ£o: {response.status_code}")
                return False

        except Exception as e:
            logger.error(f"âŒ Erro na conexÃ£o: {e}")
            return False


def main():
    """FunÃ§Ã£o principal para teste"""
    print("ğŸš€ TESTANDO AMAZON API SCRAPER")
    print("=" * 60)

    scraper = AmazonAPIScraper()

    # Testa conexÃ£o primeiro
    if not scraper.test_connection():
        print("âŒ NÃ£o foi possÃ­vel conectar com a Amazon")
        return

    # Busca ofertas
    ofertas = scraper.buscar_ofertas_gerais()

    print(f"\nğŸ¯ RESULTADO: {len(ofertas)} ofertas encontradas")
    print("=" * 60)

    for i, oferta in enumerate(ofertas[:10], 1):  # Mostra apenas as primeiras 10
        print(f"\n{i}. {oferta['titulo']}")
        print(f"   ğŸ’° PreÃ§o: {oferta['preco']}")
        if oferta.get("desconto"):
            print(f"   ğŸ·ï¸ Desconto: {oferta['desconto']}%")
        print(f"   ğŸª Loja: {oferta['loja']}")
        print(f"   ğŸ“‚ Categoria: {oferta['categoria']}")
        if oferta.get("link"):
            print(f"   ğŸ”— Link: {oferta['link'][:80]}...")


if __name__ == "__main__":
    main()
