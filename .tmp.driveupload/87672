class PriceHistoryTracker:
    """Rastreador de hist√≥rico de pre√ßos para an√°lise inteligente"""

    def __init__(self, db_path="price_history.db"):
        self.db_path = db_path
        self.init_database()

    def init_database(self):
        """Inicializa banco de dados para hist√≥rico de pre√ßos"""
        try:
            conn = sqlite3.connect(self.db_path)
            cursor = conn.cursor()

            # Tabela de produtos
            cursor.execute("""
                CREATE TABLE IF NOT EXISTS products (
                    id INTEGER PRIMARY KEY AUTOINCREMENT,
                    product_id TEXT UNIQUE,
                    title TEXT,
                    platform TEXT,
                    category TEXT,
                    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
                )
            """)

            # Tabela de hist√≥rico de pre√ßos
            cursor.execute("""
                CREATE TABLE IF NOT EXISTS price_history (
                    id INTEGER PRIMARY KEY AUTOINCREMENT,
                    product_id TEXT,
                    price REAL,
                    original_price REAL,
                    discount_percentage REAL,
                    timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
                    FOREIGN KEY (product_id) REFERENCES products (product_id)
                )
            """)

            # √çndices para performance
            cursor.execute(
                "CREATE INDEX IF NOT EXISTS idx_product_id ON price_history(product_id)"
            )
            cursor.execute(
                "CREATE INDEX IF NOT EXISTS idx_timestamp ON price_history(timestamp)"
            )

            conn.commit()
            conn.close()
            logger.info("‚úÖ Banco de dados de hist√≥rico de pre√ßos inicializado")

        except Exception as e:
            logger.error(f"‚ùå Erro ao inicializar banco de dados: {e}")

    def add_product(self, product_id: str, title: str, platform: str, category: str):
        """Adiciona novo produto ao rastreador"""
        try:
            conn = sqlite3.connect(self.db_path)
            cursor = conn.cursor()

            cursor.execute(
                """
                INSERT OR REPLACE INTO products (product_id, title, platform, category)
                VALUES (?, ?, ?, ?)
            """,
                (product_id, title, platform, category),
            )

            conn.commit()
            conn.close()

        except Exception as e:
            logger.error(f"‚ùå Erro ao adicionar produto: {e}")

    def record_price(
        self,
        product_id: str,
        price: float,
        original_price: float,
        discount_percentage: float,
    ):
        """Registra novo pre√ßo no hist√≥rico"""
        try:
            conn = sqlite3.connect(self.db_path)
            cursor = conn.cursor()

            cursor.execute(
                """
                INSERT INTO price_history (product_id, price, original_price, discount_percentage)
                VALUES (?, ?, ?, ?)
            """,
                (product_id, price, original_price, discount_percentage),
            )

            conn.commit()
            conn.close()

        except Exception as e:
            logger.error(f"‚ùå Erro ao registrar pre√ßo: {e}")

    def get_price_history(self, product_id: str, days: int = 90) -> List[Dict]:
        """Obt√©m hist√≥rico de pre√ßos dos √∫ltimos N dias"""
        try:
            conn = sqlite3.connect(self.db_path)
            cursor = conn.cursor()

            cursor.execute(
                """
                SELECT price, original_price, discount_percentage, timestamp
                FROM price_history 
                WHERE product_id = ? AND timestamp >= datetime('now', '-{} days')
                ORDER BY timestamp DESC
            """.format(days),
                (product_id,),
            )

            results = cursor.fetchall()
            conn.close()

            return [
                {
                    "price": row[0],
                    "original_price": row[1],
                    "discount_percentage": row[2],
                    "timestamp": row[3],
                }
                for row in results
            ]

        except Exception as e:
            logger.error(f"‚ùå Erro ao obter hist√≥rico de pre√ßos: {e}")
            return []

    def is_lowest_price_ever(self, product_id: str, current_price: float) -> bool:
        """Verifica se o pre√ßo atual √© o menor j√° registrado"""
        try:
            conn = sqlite3.connect(self.db_path)
            cursor = conn.cursor()

            cursor.execute(
                """
                SELECT MIN(price) FROM price_history WHERE product_id = ?
            """,
                (product_id,),
            )

            result = cursor.fetchone()
            conn.close()

            if result and result[0]:
                return current_price <= result[0]
            return True  # Primeiro pre√ßo registrado

        except Exception as e:
            logger.error(f"‚ùå Erro ao verificar menor pre√ßo: {e}")
            return False

    def is_lowest_price_recent(
        self, product_id: str, current_price: float, days: int = 90
    ) -> bool:
        """Verifica se o pre√ßo atual √© o menor dos √∫ltimos N dias"""
        try:
            conn = sqlite3.connect(self.db_path)
            cursor = conn.cursor()

            cursor.execute(
                """
                SELECT MIN(price) FROM price_history 
                WHERE product_id = ? AND timestamp >= datetime('now', '-{} days')
            """.format(days),
                (product_id,),
            )

            result = cursor.fetchone()
            conn.close()

            if result and result[0]:
                return current_price <= result[0]
            return True  # Primeiro pre√ßo registrado no per√≠odo

        except Exception as e:
            logger.error(f"‚ùå Erro ao verificar menor pre√ßo recente: {e}")
            return False

    def has_product(self, product_id: str) -> bool:
        """Verifica se o produto j√° existe no rastreador"""
        try:
            conn = sqlite3.connect(self.db_path)
            cursor = conn.cursor()

            cursor.execute(
                """
                SELECT COUNT(*) FROM products WHERE product_id = ?
            """,
                (product_id,),
            )

            result = cursor.fetchone()
            conn.close()

            return result[0] > 0 if result else False

        except Exception as e:
            logger.error(f"‚ùå Erro ao verificar produto: {e}")
            return False


class IntelligentGeekAlertSystem:
    """Sistema Inteligente de Alertas Geek com dados reais dos produtos"""

    def __init__(self):
        self.bot_token: str = TELEGRAM_BOT_TOKEN
        self.chat_id: str = TELEGRAM_CHAT_ID

        # Inicializa o bot
        self.bot: Optional[Bot] = None
        try:
            self.bot = Bot(token=self.bot_token)
            logger.info("‚úÖ Bot do Telegram inicializado com sucesso")
        except Exception as e:
            logger.error(f"‚ùå Erro ao inicializar bot do Telegram: {e}")
            self.bot = None

        # Inicializa APIs
        self.shopee_api = ShopeeAPIIntegration(
            app_id="18330800803", app_secret="IOMXMSUM5KDOLSYKXQERKCU42SNMJERR"
        )
        self.aliexpress_api = AliExpressAPI()

        # Rastreador de pre√ßos
        self.price_tracker = PriceHistoryTracker()

        # Inicializa o sistema unificado de produtos
        self.product_system = UnifiedProductSystem()

        # Configura√ß√µes de alertas inteligentes
        self.alert_criteria = {
            "discount_threshold": 0.05,  # 5% de desconto m√≠nimo (era 15%)
            "price_drop_threshold": 0.10,  # 10% de queda de pre√ßo (era 20%)
            "lowest_price_ever": True,  # Alerta para menor pre√ßo hist√≥rico
            "lowest_price_3months": True,  # Alerta para menor pre√ßo em 3 meses
            "lowest_price_6months": True,  # Alerta para menor pre√ßo em 6 meses
            "commission_threshold": 0.05,  # 5% de comiss√£o m√≠nima (era 10%)
        }

        # Cache de produtos j√° alertados
        self.alerted_products = set()
        self.alert_cooldown = timedelta(
            hours=6
        )  # 6 horas entre alertas do mesmo produto

        # Estat√≠sticas
        self.stats = {
            "total_alerts": 0,
            "total_products_analyzed": 0,
            "alerts_today": 0,
            "last_alert": None,
            "search_cycles": 0,
        }

        # Controle de execu√ß√£o
        self.running = True
        self.search_interval = 300  # 5 minutos entre buscas

    def should_alert_product(self, product) -> tuple[bool, str]:
        """Determina se um produto deve gerar alerta baseado em crit√©rios inteligentes"""
        try:
            # Cria ID √∫nico do produto
            product_id = f"{product.shop_name}_{product.price}_{product.offer_link}"

            # Verifica se j√° foi alertado recentemente
            if product_id in self.alerted_products:
                return False, "Produto j√° alertado recentemente"

            # Calcula desconto
            if hasattr(product, "original_price") and product.original_price:
                original_price = product.original_price
            else:
                # Simula pre√ßo original se n√£o dispon√≠vel
                original_price = product.price * 1.15

            discount_percentage = (
                (original_price - product.price) / original_price
            ) * 100

            # Crit√©rio 1: Desconto m√≠nimo
            if discount_percentage < (self.alert_criteria["discount_threshold"] * 100):
                return False, f"Desconto insuficiente: {discount_percentage:.1f}%"

            # Crit√©rio 2: Comiss√£o m√≠nima
            if hasattr(product, "commission_rate") and product.commission_rate:
                if (
                    product.commission_rate
                    < self.alert_criteria["commission_threshold"]
                ):
                    return False, f"Comiss√£o baixa: {product.commission_rate:.1%}"

            # Crit√©rio 3: Menor pre√ßo hist√≥rico
            if self.alert_criteria["lowest_price_ever"]:
                if self.price_tracker.is_lowest_price_ever(product_id, product.price):
                    return (
                        True,
                        f"üî• MENOR PRE√áO HIST√ìRICO! Desconto: {discount_percentage:.1f}%",
                    )

            # Crit√©rio 4: Menor pre√ßo em 3 meses
            if self.alert_criteria["lowest_price_3months"]:
                if self.price_tracker.is_lowest_price_recent(
                    product_id, product.price, 90
                ):
                    return (
                        True,
                        f"üìâ MENOR PRE√áO EM 3 MESES! Desconto: {discount_percentage:.1f}%",
                    )

            # Crit√©rio 5: Menor pre√ßo em 6 meses
            if self.alert_criteria["lowest_price_6months"]:
                if self.price_tracker.is_lowest_price_recent(
                    product_id, product.price, 180
                ):
                    return (
                        True,
                        f"üìä MENOR PRE√áO EM 6 MESES! Desconto: {discount_percentage:.1f}%",
                    )

            # Crit√©rio 6: Desconto excepcional
            if discount_percentage >= 30:
                return True, f"üíé DESCONTO EXCEPCIONAL! {discount_percentage:.1f}%"

            # Crit√©rio 7: Desconto alto
            if discount_percentage >= 20:
                return True, f"üî• DESCONTO ALTO! {discount_percentage:.1f}%"

            # Crit√©rio 8: Desconto moderado (novo)
            if discount_percentage >= 10:
                return True, f"üî• DESCONTO MODERADO! {discount_percentage:.1f}%"

            # Crit√©rio 9: Pre√ßo competitivo (novo)
            if product.price <= 100:  # Produtos at√© R$ 100
                return True, f"üí∞ PRE√áO COMPETITIVO! R$ {product.price:.2f}"

            # Crit√©rio 10: Produtos de alta comiss√£o (novo)
            if hasattr(product, "commission_rate") and product.commission_rate >= 0.08:
                return True, f"üí∏ ALTA COMISS√ÉO! {product.commission_rate:.1%}"

            # Crit√©rio 11: Primeira vez do produto (novo)
            if not self.price_tracker.has_product(product_id):
                return True, f"üÜï NOVO PRODUTO! Desconto: {discount_percentage:.1f}%"

            return (
                False,
                f"Crit√©rios n√£o atendidos. Desconto: {discount_percentage:.1f}%",
            )

        except Exception as e:
            logger.error(f"‚ùå Erro ao analisar produto: {e}")
            return False, f"Erro na an√°lise: {e}"

    async def search_and_analyze_products(self):
        """Busca e analisa produtos constantemente"""
        try:
            logger.info("üîç Iniciando busca inteligente de produtos...")

            all_products = []

            # Busca produtos da Shopee
            try:
                shopee_products = self.shopee_api.get_product_offers(
                    page=0,
                    limit=20,  # Mais produtos para an√°lise
                    sort_type=SortType.COMMISSION_HIGH_LOW,
                )

                if shopee_products:
                    # Log para debug da estrutura dos produtos
                    if shopee_products:
                        first_product = shopee_products[0]
                        logger.info("üîç Estrutura do primeiro produto Shopee:")
                        logger.info(f"   Atributos: {dir(first_product)}")
                        logger.info(
                            f"   Title: {getattr(first_product, 'title', 'N/A')}"
                        )
                        logger.info(
                            f"   Shop name: {getattr(first_product, 'shop_name', 'N/A')}"
                        )
                        logger.info(
                            f"   Price: {getattr(first_product, 'price', 'N/A')}"
                        )
                        logger.info(
                            f"   Image URL: {getattr(first_product, 'image_url', 'N/A')}"
                        )
                        logger.info(
                            f"   Image: {getattr(first_product, 'image', 'N/A')}"
                        )
                        logger.info(
                            f"   Product image: {getattr(first_product, 'product_image', 'N/A')}"
                        )

                    all_products.extend(shopee_products)
                    logger.info(
                        f"‚úÖ {len(shopee_products)} produtos da Shopee encontrados"
                    )

            except Exception as e:
                logger.warning(f"Erro ao buscar na Shopee: {e}")

            # Busca produtos do AliExpress
            try:
                aliexpress_products = self.aliexpress_api.search_products(
                    "tech", page_size=20
                )

                if aliexpress_products:
                    converted_aliexpress = self.convert_aliexpress_products(
                        aliexpress_products
                    )
                    all_products.extend(converted_aliexpress)
                    logger.info(
                        f"‚úÖ {len(converted_aliexpress)} produtos do AliExpress encontrados"
                    )

            except Exception as e:
                logger.warning(f"Erro ao buscar no AliExpress: {e}")

            if not all_products:
                logger.warning("‚ùå Nenhum produto encontrado para an√°lise")
                return

            # Analisa cada produto
            products_to_alert = []

            for product in all_products:
                try:
                    # Registra produto no rastreador
                    product_id = (
                        f"{product.shop_name}_{product.price}_{product.offer_link}"
                    )
                    self.price_tracker.add_product(
                        product_id,
                        getattr(product, "shop_name", "Produto"),
                        getattr(product, "platform", "shopee"),
                        "tech",
                    )

                    # Registra pre√ßo atual
                    if hasattr(product, "original_price") and product.original_price:
                        original_price = product.original_price
                    else:
                        original_price = product.price * 1.15

                    discount_percentage = (
                        (original_price - product.price) / original_price
                    ) * 100

                    self.price_tracker.record_price(
                        product_id, product.price, original_price, discount_percentage
                    )

                    # Verifica se deve gerar alerta
                    should_alert, reason = self.should_alert_product(product)

                    if should_alert:
                        products_to_alert.append((product, reason))
                        logger.info(f"üö® ALERTA GERADO: {product.shop_name} - {reason}")

                    self.stats["total_products_analyzed"] += 1

                except Exception as e:
                    logger.error(f"‚ùå Erro ao analisar produto: {e}")
                    continue

            # Posta alertas se necess√°rio
            if products_to_alert:
                await self.post_alerts(products_to_alert)
            else:
                logger.info("‚úÖ Nenhum produto atendeu aos crit√©rios de alerta")

            self.stats["search_cycles"] += 1

        except Exception as e:
            logger.error(f"‚ùå Erro na busca e an√°lise: {e}")

    async def post_alerts(self, alerts: List[Dict[str, Any]]):
        """Posta alertas no canal do Telegram com dados reais dos produtos"""
        if not alerts:
            logger.info("üì≠ Nenhum alerta para postar")
            return

        logger.info(f"üì¢ Postando {len(alerts)} alertas...")

        for i, alert in enumerate(alerts, 1):
            try:
                # Obt√©m dados reais do produto
                product_data = await self._get_real_product_data(alert)

                # Formata mensagem com dados reais
                message = self._format_alert_message_with_real_data(alert, product_data)

                # Tenta enviar com imagem se dispon√≠vel
                image_url = product_data.get("image_url") if product_data else None

                if image_url and self._test_image_url(image_url):
                    logger.info(
                        f"üîç Produto {i}/{len(alerts)}: {product_data.get('title', 'N/A')} - image_url={image_url}"
                    )

                    try:
                        await self.bot.send_photo(
                            chat_id=self.chat_id,
                            photo=image_url,
                            caption=message,
                            parse_mode="HTML",
                        )
                        logger.info(
                            f"‚úÖ Alerta {i}/{len(alerts)} postado (com imagem): {product_data.get('title', 'N/A')}"
                        )
                    except Exception as e:
                        logger.warning(
                            f"‚ö†Ô∏è Falha ao enviar com imagem, tentando sem: {e}"
                        )
                        await self.bot.send_message(
                            chat_id=self.chat_id, text=message, parse_mode="HTML"
                        )
                        logger.info(
                            f"‚úÖ Alerta {i}/{len(alerts)} postado (sem imagem): {product_data.get('title', 'N/A')}"
                        )
                else:
                    logger.info(
                        f"üîç Produto {i}/{len(alerts)}: {product_data.get('title', 'N/A')} - image_url={image_url}"
                    )

                    await self.bot.send_message(
                        chat_id=self.chat_id, text=message, parse_mode="HTML"
                    )
                    logger.info(
                        f"‚úÖ Alerta {i}/{len(alerts)} postado (sem imagem): {product_data.get('title', 'N/A')}"
                    )

                # Delay entre mensagens
                await asyncio.sleep(5)

            except Exception as e:
                logger.error(f"‚ùå Erro ao postar alerta {i}: {e}")
                continue

        logger.info(f"‚úÖ {len(alerts)} alertas postados com sucesso!")

    async def _get_real_product_data(
        self, alert: Dict[str, Any]
    ) -> Optional[Dict[str, Any]]:
        """Obt√©m dados reais do produto usando o sistema unificado"""
        try:
            # Extrai URL do produto do alerta
            product_url = alert.get("product_link") or alert.get("offer_link")
            if not product_url:
                logger.warning("‚ö†Ô∏è Alert n√£o cont√©m URL do produto")
                return None

            # Obt√©m dados reais do produto
            product_data = self.product_system.get_product_details(product_url)

            if product_data:
                logger.info(
                    f"‚úÖ Dados reais obtidos: {product_data.get('title', 'N/A')}"
                )
                return product_data
            else:
                logger.warning("‚ö†Ô∏è Falha ao obter dados reais do produto")
                return None

        except Exception as e:
            logger.error(f"‚ùå Erro ao obter dados reais: {e}")
            return None

    def _format_alert_message_with_real_data(
        self, alert: Dict[str, Any], product_data: Optional[Dict[str, Any]]
    ) -> str:
        """Formata mensagem de alerta com dados reais do produto"""
        try:
            # Usa dados reais se dispon√≠veis, sen√£o usa dados do alerta
            title = (
                product_data.get("title")
                if product_data
                else alert.get("title", "Produto")
            )
            store = product_data.get("store") if product_data else "Loja"

            # Dados do alerta
            price = alert.get("price", 0)
            original_price = alert.get("original_price", price)
            discount = alert.get("discount", 0)
            shop_name = alert.get("shop_name", "Loja")
            rating = alert.get("rating_star", 0)
            alert_type = alert.get("alert_type", "ALERTA")

            # Formata mensagem
            message = f"üî•üî•üî• üö® {alert_type} üö®\n\n"

            if discount > 0:
                message += f"üî• Desconto: {discount:.1f}%\n\n"

            message += f"üíª {title}\n"
            message += f"üè™ Vendido pela: {shop_name}\n"

            if original_price > price:
                message += f"üí∞ De ~R$ {original_price:.2f}~ por\n"

            message += f"üíµ R$ {price:.2f}"

            if discount > 0:
                message += f" ({discount:.1f}% de desconto)"

            message += "\n"

            if rating > 0:
                message += f"‚≠ê Avalia√ß√£o: {rating:.1f}\n\n"
            else:
                message += "\n"

            message += "üõí APROVEITAR AGORA!"

            return message

        except Exception as e:
            logger.error(f"‚ùå Erro ao formatar mensagem: {e}")
            return "üö® ALERTA DE OFERTA!\n\nüõí APROVEITAR AGORA!"

    def _test_image_url(self, image_url: str) -> bool:
        """Testa se a URL da imagem √© v√°lida"""
        try:
            response = requests.head(image_url, timeout=10)
            return response.status_code == 200
        except:
            return False

    def get_product_category(self, product) -> str:
        """Determina a categoria do produto"""
        if not hasattr(product, "offer_link") or not product.offer_link:
            return "tech"

        link_lower = product.offer_link.lower()

        if any(word in link_lower for word in ["smartphone", "celular", "telefone"]):
            return "smartphone"
        elif any(word in link_lower for word in ["notebook", "laptop", "computador"]):
            return "notebook"
        elif any(word in link_lower for word in ["gamer", "gaming", "game"]):
            return "gaming"
        elif any(
            word in link_lower for word in ["fone", "headphone", "mouse", "teclado"]
        ):
            return "tech_accessories"
        else:
            return "tech"

    def get_category_emoji(self, category: str) -> str:
        """Retorna emoji para a categoria"""
        emoji_map = {
            "smartphone": "üì±",
            "notebook": "üíª",
            "gaming": "üéÆ",
            "tech_accessories": "üéß",
            "tech": "üíª",
        }
        return emoji_map.get(category, "üíª")

    def convert_aliexpress_products(self, aliexpress_products) -> List:
        """Converte produtos do AliExpress para formato compat√≠vel"""
        converted_products = []

        # Verifica se aliexpress_products √© uma lista ou se precisa extrair os produtos
        if isinstance(aliexpress_products, dict):
            if "resp_result" in aliexpress_products:
                products_list = (
                    aliexpress_products["resp_result"]
                    .get("products", {})
                    .get("product", [])
                )
            elif "products" in aliexpress_products:
                products_list = aliexpress_products["products"]["product"]
            elif "result" in aliexpress_products:
                products_list = (
                    aliexpress_products["result"].get("products", {}).get("product", [])
                )
            else:
                logger.warning("Estrutura de dados do AliExpress n√£o reconhecida")
                return []
        elif isinstance(aliexpress_products, list):
            products_list = aliexpress_products
        else:
            logger.warning(
                f"Tipo de dados inesperado do AliExpress: {type(aliexpress_products)}"
            )
            return []

        # Garante que products_list seja uma lista
        if not isinstance(products_list, list):
            products_list = [products_list]

        for product in products_list:
            try:
                if isinstance(product, str):
                    logger.warning(f"Produto √© string, pulando: {product}")
                    continue

                # Cria um objeto similar ao da Shopee para compatibilidade
                converted_product = type(
                    "AliExpressProduct",
                    (),
                    {
                        "shop_name": product.get("shop_name", "AliExpress"),
                        "price": float(
                            product.get(
                                "target_sale_price", product.get("promotion_price", 0)
                            )
                        ),
                        "commission": float(
                            product.get(
                                "target_sale_price", product.get("promotion_price", 0)
                            )
                        )
                        * float(product.get("commission_rate", 0.05)),
                        "commission_rate": float(product.get("commission_rate", 0.05)),
                        "rating_star": float(product.get("evaluate_rate", 0)),
                        "offer_link": product.get(
                            "promotion_link", product.get("product_detail_url", "")
                        ),
                        "timestamp": datetime.now(),
                        "platform": "aliexpress",
                    },
                )()

                converted_products.append(converted_product)

            except Exception as e:
                logger.warning(f"Erro ao converter produto AliExpress: {e}")
                continue

        return converted_products

    async def run_continuous_search(self):
        """Executa busca cont√≠nua de ofertas"""
        try:
            logger.info("üöÄ Iniciando Sistema Inteligente de Alertas Geek")
            logger.info(
                "üîç Busca cont√≠nua ativada - analisando produtos a cada 5 minutos"
            )

            if not self.bot:
                logger.error(
                    "‚ùå Bot do Telegram n√£o est√° dispon√≠vel. Verifique o token."
                )
                return

            # Primeira busca imediata
            await self.search_and_analyze_products()

            # Loop principal de busca cont√≠nua
            while self.running:
                try:
                    # Aguarda intervalo configurado
                    await asyncio.sleep(self.search_interval)

                    # Executa nova busca
                    await self.search_and_analyze_products()

                    # Log de status
                    logger.info(
                        f"üîÑ Ciclo de busca {self.stats['search_cycles']} conclu√≠do"
                    )
                    logger.info(
                        f"üìä Estat√≠sticas: {self.stats['total_alerts']} alertas, {self.stats['total_products_analyzed']} produtos analisados"
                    )

                except Exception as e:
                    logger.error(f"‚ùå Erro no ciclo de busca: {e}")
                    await asyncio.sleep(60)  # Aguarda 1 minuto em caso de erro

        except KeyboardInterrupt:
            logger.info("‚èπÔ∏è Sistema interrompido pelo usu√°rio")
            self.running = False
        except Exception as e:
            logger.error(f"‚ùå Erro no sistema: {e}")
            self.running = False

    def stop(self):
        """Para o sistema"""
        self.running = False
        logger.info("‚èπÔ∏è Sistema de alertas inteligentes parado")


def main():
    """Fun√ß√£o principal"""
    print("üöÄ SISTEMA INTELIGENTE DE ALERTAS GEEK")
    print("=" * 60)
    print("üéØ Busca cont√≠nua com crit√©rios inteligentes")
    print("üìä An√°lise de pre√ßos hist√≥ricos")
    print("üö® Alertas autom√°ticos baseados em m√©tricas")
    print("=" * 60)

    # Cria sistema
    alert_system = IntelligentGeekAlertSystem()

    # Executa busca cont√≠nua
    asyncio.run(alert_system.run_continuous_search())


if __name__ == "__main__":
    main()
